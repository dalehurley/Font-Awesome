//OPTIMISATION : n'inclure que les utilitaires réellement utilisés dans ce widget (cf dossiers Utilities)
@import "_templates/baseTheme/_framework/SPLessCss/Utilities/Css3/_Css3Gradient.less";
@import "_templates/baseTheme/_framework/SPLessCss/Utilities/Css3/_Css3Transition.less";

//Mise en page par défaut du widget
.debug_debug {
	position: absolute;
	//forçage d'affichage au premier plan
	z-index: 100000;
	//disparition lorsque désactivé
	&.disabled { opacity: 0; visibility: hidden; }
	
	//animation disparition (syntaxe lessPHP v0.3.0)
	.csstransitions & {
		@transitionProperty(visibility, opacity);
		@transitionDuration(.2s);
		@transitionFunction(ease-out);
		@transitionDelay(.2s, 0);
	}
	
	//ajout fond par défaut
	.dm_widget_inner{
		background-color: @colorCouleur3Clair;
		padding: (@gridBaseline -1px) (@gridGutter -1px);
		border: 1px solid @colorCouleur3Moyen;
		
		//transparence du fond (syntaxe lessPHP v0.3.0)
		.rgba & { background-color: fadeout(@colorCouleur3ClairSup, 25%); }
		
		//à changer par une véritable icone lorsque disponible
		&:after {
			content: 'X';
			position: absolute;
			font-size: @fontGlobalSizePx;
			right: 2px;
			top: 0;
			font-weight: bold;
		}
		
		.debugUtils {
			background-color: @colorCouleur3;
			.rgba & { background-color: fadeout(@colorCouleur3Sup, 50%); }
			margin-bottom: @gridBaseline;
			
			.spriteInit {
				width: 100%;
			}
			
			.spriteProgress {
				//disparition lorsque désactivé
				&.disabled { opacity: 0; visibility: hidden; }
				
				//animation disparition (syntaxe lessPHP v0.3.0)
				.csstransitions & {
					@transitionProperty(visibility, opacity);
					@transitionDuration(.2s);
					@transitionFunction(ease-out);
					@transitionDelay(.2s, 0);
				}
				
				//stylage en bar de progression
				position: relative;
				overflow: visible;
				@verticalGradient(@colorCouleur1Clair; @colorCouleur1);
				.rgba & { @verticalGradient(fadeout(@colorCouleur1, 25%); fadeout(@colorCouleur1Moyen, 25%)); }
				height: @gridBaseline;
				width: 100%;
				
				.picker {
					display: block;
					float: left;
					padding: 0 @offS;
					line-height: @gridBaseline;
					height: @gridBaseline;
					background-color: @colorCouleur3Fonce;
					color: @colorCouleur3ClairSup;
					font-weight: bold;
				}
			}
		}
		
		.debugInfo {
			background-color: @colorCouleur3Clair;
			.rgba & { background-color: fadeout(@colorCouleur3ClairSup, 50%); }
		}
	}
}

//Placement personnalisé de la div de debug et de warning flotante
.debug, .warning {
	position: absolute;
	//forçage d'affichage au premier plan
	z-index: 100000;
	content: "";
	padding: (@gridBaseline -1px) (@gridGutter -1px);
	
	&:after {
		content: 'X';
		position: absolute;
		font-size: @fontSizeSmall;
		right: 1px;
		top: 0;
		font-weight: bold;
	}
}

//gestion des infos de débug
.debugInfo, .debug, .warning {
	.info { font-weight: bold; }
	.value { font-weight: normal; }
}

.debugInfo, .debug {
	.info { color: @colorCouleur3Fonce; }
	.value { color: @colorCouleur3; }
}
.warning {
	.info { color: darken(desaturate(@colorRequired,25%),45%); }
	.value { color: darken(desaturate(@colorRequired,25%),35%); }
}

.debug {
	background-color: @colorCouleur3Clair;
	border: 1px solid @colorCouleur3Moyen;
	//transparence du fond (syntaxe lessPHP v0.3.0)
	.rgba & { background-color: fadeout(@colorCouleur3ClairSup, 25%); }
}

.warning {
	background-color: lighten(desaturate(@colorRequired,50%), 25%);
	border: 1px solid @colorRequired;
	//transparence du fond (syntaxe lessPHP v0.3.0)
	.rgba & { background-color: fadeout(lighten(@colorRequired,30%), 25%); }
}